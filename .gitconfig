[core]
    editor = "vim"
    whitespace=fix,-indent-with-non-tab,trailing-space,cr-at-eol
	excludesfile = /Users/bguery/.gitignore_global

[user]
	name = Boris Gu√©ry
	email = guery.b@gmail.com
	signingkey = 034C6265

[color]
    ui = auto
  [color "branch"]
    current = yellow reverse
    local   = yellow
    remote  = green
  [color "diff"]
    meta       = yellow bold
    frag       = magenta bold
    old        = red bold
    new        = green bold
    whitespace = red reverse
  [color "status"]
    added     = yellow
    changed   = green
    untracked = cyan

[diff]
    noprefix  = true
    wordRegex = .

[alias]
    logg = log --pretty=format:'%C(yellow)%h%C(reset) %s %C(cyan)%cr%C(reset) %C(blue)%an%C(reset) %C(green)%d%C(reset)' --graph --date-order
    all-yesterday = log --graph --all --since="day.before.yesterday.midnight" --until=midnight --author="$(git config user.name)" --oneline
    st = status
    ci = commit
    ap = add -p
    rp = reset -p
    cp = checkout -p
    show-deleted = !sh -c 'git show $(git rev-list --max-count=1 --all -- $0)^:$0'
    publish = push --set-upstream origin

[status]
    submoduleSummary = true

[push]
    default = simple
[log]
    abbrevCommit = true
[difftool "sourcetree"]
	cmd = opendiff \"$LOCAL\" \"$REMOTE\"
	path = 
[mergetool "sourcetree"]
	cmd = /Applications/SourceTree.app/Contents/Resources/opendiff-w.sh \"$LOCAL\" \"$REMOTE\" -ancestor \"$BASE\" -merge \"$MERGED\"
	trustExitCode = true
[rerere]
	enabled = true
[gpg]
	program = gpg2
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
